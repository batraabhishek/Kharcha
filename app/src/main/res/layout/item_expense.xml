<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="16dp">

    <in.abhishekbatra.kharcha.views.TextViewPlus
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:id="@+id/expense_icon"
        android:text="C"
        app:customFont="tonicons.ttf"
        android:textColor="@color/white_primary_text"
        android:textSize="@dimen/headline"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/expense_name"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Commute to Wingify"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/expense_date"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="26th December 2015"/>
    </LinearLayout>

    <TextView
        android:id="@+id/expense_amount"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 1000"
        android:textColor="@color/colorAccent"/>


</LinearLayout>